FROM --platform=i386 i386/debian:bookworm
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade && \
	apt-get -y install apt-utils gcc screen tmux \
	python3 vim unzip binutils tcpdump \
	fakeroot dbus base whiptail hexedit \
	patch wamerican ucf manpages procps \
	file git luajit make lua5.4 dialog curl \
	less cowsay netcat-openbsd iproute2 iputils-ping && \
	apt-get install -y build-essential cmake pkgconf \
	libevent-dev libboost-dev libsqlite3-dev libcapnp-dev capnproto  && \
	mkdir -p /bitcoin && cd /bitcoin && \
	git clone --depth 1 https://github.com/bitcoin/bitcoin.git  && \
	cd /bitcoin/bitcoin && \
	cmake -B build -S .  -DWITH_QRENCODE=OFF -DBUILD_GUI=OFF -DCMAKE_CXX_FLAGS="-m32" \
	CXXFLAGS="-Os -s"  \
	-DCMAKE_BUILD_TYPE=MinSizeRel \
	-DBUILD_BITCOIN_QT=OFF \
	-DENABLE_ZMQ=OFF \
	-DENABLE_UPNP=OFF \
	-DENABLE_TESTS=OFF \
	-DENABLE_BENCH=OFF \
	-DENABLE_MAN=OFF \
	-DENABLE_UTILS=ON \
	-DBUILD_BITCOIN_NODE=ON \
	-DBUILD_SHARED_LIBS=OFF \
	-DCMAKE_EXE_LINKER_FLAGS="-s" \
	-DCMAKE_CXX_FLAGS="-Os -ffunction-sections -fdata-sections -fvisibility=hidden" \
	-DCMAKE_C_FLAGS="-Os -ffunction-sections -fdata-sections -fvisibility=hidden" && \
	cmake --build build -j $(nproc)  && \
	cmake --install build && \
	cd / && rm -r /bitcoin && \
	mkdir -p /tmplibs && \
	(find / -name "*bitcoin*" -type f | egrep -v man1 | while read fn; do ldd $fn; done | grep '/lib/i386-linux-gnu/' | cut -d' ' -f3 | sort | uniq | \
	while read libfn; do cp $libfn /tmplibs/.; done ) && \
	apt-get remove -y build-essential gcc cmake pkgconf  \
	libevent-dev libboost-dev libsqlite3-dev libcapnp-dev capnproto \
	patch make git unzip && apt-get -y autoremove --purge && \
	(find /tmplibs -type f | while read fn; do mv $fn /lib/i386-linux-gnu/.; done) && rm -r /tmplibs && \
	apt-get clean -y && \
	find / -type f -executable | grep "bin" | while read fn; do (file $fn 2>/dev/null | grep ELF 1>/dev/null 2>/dev/null && strip $fn || true); done


RUN useradd -m user && echo "user:password" | chpasswd
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
CMD [ "/bin/bash" ]
